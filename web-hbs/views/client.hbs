    console.log(msg)
    if(msg=="good") {
      good[Math.floor(Math.random()*good.length)].play();
    }
    if(msg=="so_good") {
      so_good.play();
    }
    if(msg=="stand") {
      stand[Math.floor(Math.random()*stand.length)].play();
    }
    if(msg=="sit") {
      sit[Math.floor(Math.random()*sit.length)].play();
    }
    if(msg=="kneel") {
      kneel[Math.floor(Math.random()*kneel.length)].play();
    }
  });
  
